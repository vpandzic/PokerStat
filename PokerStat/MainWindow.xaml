<Window x:Class="PokerStat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokerStat"
        mc:Ignorable="d"
        WindowState="Normal"
      
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="MainWindow" Height="800" Width="800" MouseUp="Window_MouseUp" MouseDown="Window_MouseDown">

    <Grid>
        <Ellipse Fill="White" Margin="10" >

        </Ellipse>
        <Button x:Name="closeWin" Content="X" HorizontalAlignment="Left" Margin="625,105,0,0" VerticalAlignment="Top" Width="15" Height="18" RenderTransformOrigin="1.659,1.243" Click="close_Window"/>
        <Button x:Name="maxWin" Content="O" HorizontalAlignment="Left" Margin="605,105,0,0" VerticalAlignment="Top" Width="15" Height="18" RenderTransformOrigin="1.659,1.243" Click="max_Window"/>
        <Button x:Name="minWin" Content="_" HorizontalAlignment="Left" Margin="585,105,0,0" VerticalAlignment="Top" Width="15" Height="18" RenderTransformOrigin="0.048,-1.042" Click="min_Window"/>


    </Grid>
</Window>
